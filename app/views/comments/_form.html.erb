<%= simple_form_for([@post,@post.comments.build]) do |f| %>
<div class="field">
		<div class="control">
		<%= f.input :name , input_html: {class: 'input'}, wrapper: false , input_label: {class: 'label'} %>
		</div>
	</div>
	<div class="field">
		<div class="control">
		<%= f.input :comment , input_html: {class: 'textarea'}, wrapper: false , input_label: {class: 'label'} %>
		</div>
	</div>
   <%= f.button :submit , class: "button is-primary" %>
<% end %>